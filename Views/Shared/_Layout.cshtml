<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/myStyles.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap"
          rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/myScripts.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <title>Czas Pracy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    @if (User.Identity.IsAuthenticated)
    { 
    <div class="navbar navbar-fixed-top navbar-custom">
        @* navbar-inverse *@
        @*<div class="container">*@
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" onclick="toggle_navbar_toggle()" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <div onclick="show_sidenav();" title="Lista pracowników" class="navbar-brand sidenav-icon side"></div> @* <span>Lista pracowników</span>*@
            @Html.ActionLink("Czas Pracy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-index" })

        </div>
        
        <div class="navbar-custom-middle" id="text-navbar-middle">
            <div style="display: inline-flex">
                <a href="#"><div class="arrow-left"></div></a>
                <div class="WorkName" id="WorkName_id">
                    Imię Nazwisko Pracownika
                </div>
                <a href="#"><div class="arrow-right"></div></a>
            </div>
            <div class="WorkDepartment">
                Dział IT
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @*<li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                <li>@Html.ActionLink("Informacje", "About", "Home")</li>
                <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>*@
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
        @*</div>*@
    </div>
    }

    
    

    
    <div class="container body-content">
        <div style="height: 15px;"></div>
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Czas Pracy</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
        

</body>
</html>

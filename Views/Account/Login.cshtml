@using Czas_Pracy.Models
@using System.Globalization
@using System.Threading
@using System.Web
@model LoginViewModel
@{
    ViewBag.Title = "Zaloguj";
}

<script>
    function login_wait() {
        $('#loading').fadeToggle(150);
    };
</script>

<div id="loading" style="display: none;">
    <div class="loading-div">
        <img src="~/Content/images/14.gif" />
        <div class="loading-text">
            Logowanie...<br />
            proszę czekać...
        </div>
    </div>
</div>
<div class="row">
    <div class="login-form">
        <a href="http://www.eurodms.pl" target="_blank"><img src="~/Content/images/logo_mobile.png" class="logo" /></a>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()


                <div class="login-form-inner">
                    <div class="form-group add-base-div">

                        <div class="add-base-div-inner">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control add-base-width login-fix" })

                        </div>
                    </div>
                    <div class="form-group add-base-div">

                        <div class="add-base-div-inner">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control add-base-width login-fix" })

                        </div>
                    </div>
                    <div class="form-group add-base-div">

                        <div class="checkbox">

                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "login-checkbox" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "login-checkbox-label" })
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="add-base-btn">
                            <input type="submit" value="Zaloguj" class="btn btn-default add-base-btn-style" onclick="login_wait();" style="margin-bottom: 8px; width: 250px;" />
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger text-danger-fix" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger text-danger-fix" })
                        </div>
                    </div>
                </div>


            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}